generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  slackId          String  @id
  totalMinutes     Int
  tz               String
  remindersEnabled Boolean
  reminder         String
  selectedGoal     String
  eventId          String?
  goals            Goals[]
}

model Session {
  messageTs  String  @id
  userId     String
  template   String
  goal       String
  task       String
  time       Int
  elapsed    Int
  completed  Boolean
  attachment String?
  cancelled  Boolean
  createdAt  String?
}

model Goals {
  goalId   String @id
  slackId  String
  goalName String
  minutes  Int
  user     User   @relation(fields: [slackId], references: [slackId])
}

model EventContributions {
  contributionId Int    @id @default(autoincrement())
  slackId        String
  eventId        String
  minutes        Int
  sessions       String
}
